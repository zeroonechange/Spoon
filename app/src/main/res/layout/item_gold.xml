<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorCard"
    android:foreground="?attr/selectableItemBackground"
    android:padding="12dp">

    <com.nobody.spoon.widget.SquareImageView
        android:id="@+id/iv_gold_item_img"
        android:layout_width="@dimen/gold_image_size"
        android:layout_height="@dimen/gold_image_size"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_gold_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@id/iv_gold_item_img"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="2"
        android:textColor="@color/colorText"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_gold_item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_gold_item_img"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/iv_gold_item_img"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/comment_reply"
        android:textSize="12sp" />
</RelativeLayout>